{% import 'node_modules/esds-library/components/esds.njk' as esds %}
{% import 'escom.njk' as escom with context %}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="keywords" content="{{ meta_keywords | default(global.meta_keywords) }}">
        <meta name="description" content="{{ meta_description | default(global.meta_description) }}">
        <meta name="HandheldFriendly" content="True">
        <meta name="format-detection" content="telephone=no">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, minimum-scale=1.0">
        <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
        <meta http-equiv="cleartype" content="on">

        <title>{{ title_tag | default(global.title_tag) }}</title>

        <link href="https://fonts.googleapis.com/css?family=Barlow:300,400,600" rel="stylesheet">
        <link rel="stylesheet" href="/dependencies/esds.css"> <!-- copied from esds-library dependency -->
        <link rel="stylesheet" href="/dist/escom.css">

        {% block head_elements %}
        {% endblock %}
    </head>
    <body class="{{ body_classes }}">
        {% block body %}
        {% endblock %}
        {{ escom.site_footer() }}
        {# jQuery pulled in to support legacy code concatenated into escom.js #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        {# Remove when legacy JS that depends on jquery is gone #}
        <script src="/dist/escom.js"></script>
        {% include "includes/_google_analytics.html" %}
    </body>
</html>
