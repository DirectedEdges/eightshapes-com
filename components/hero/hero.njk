{% macro hero(
    class=false,
    bio={
        "name": "First Name",
        "title": "Job Position",
        "start_year": "2017",
        "image": "http://via.placeholder.com/1368x560"
    }
  ) %}
    <div class="escom-hero{{ ' ' + class if class }}">
        <div class="escom-hero__inner">
            <img alt="{{ bio.name }}" class="escom-hero__image" src="{{ bio.image }}" />
            <div class="hero__body">
                <h1 class="escom-hero__heading">{{ bio.name }}</h1>
                <div class="escom-hero__subhead">{{ bio.title }}</div>
                <div class="escom-hero__subhead">Eightshapes since {{ bio.start_year }}</div>
            </div>
        </div>
    </div>
{% endmacro %}
