{% import '../../node_modules/esds-library/components/esds.njk' as esds %}
{% import '../_includes/escom.njk' as escom with context %}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta name="keywords" content="{{ meta_keywords | default(global.meta_keywords) }}">
        <meta name="description" content="{{ meta_description | default(global.meta_description) }}">
        <meta name="HandheldFriendly" content="True">
        <meta name="format-detection" content="telephone=no">
        <meta name="MobileOptimized" content="320">
        <meta name="viewport" content="width=device-width, minimum-scale=1.0">
        <!-- Mobile IE allows us to activate ClearType technology for smoothing fonts for easy reading -->
        <meta http-equiv="cleartype" content="on">

        {% if layout == 'article.njk' %}
            <title>Eightshapes > @components > {{ title }}</title>
            <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i&display=swap" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Barlow+Condensed:700&display=swap" rel="stylesheet">
            <!-— facebook open graph tags -->
            <meta property="og:type" content="website" />
            <meta property="og:url" content="https://www.eightshapes.com{{ page.url }}" />
            <meta property="og:title" content="{{ title }}" />
            <meta property="og:description" content="{{ deck }}" />
            {% if masthead %}
            <meta property="og:image" content="https://eightshapes.com//images/articles/{{ title_image_path }}/masthead.png" />
            {% endif %}

            <!-— twitter card tags additive with the og: tags -->
            <meta name="twitter:card" content="summary_large_image">
            <meta name="twitter:domain" value="eightshapes.com" />
            <meta name="twitter:title" value="{{ title }}" />
            <meta name="twitter:description" value="{{ deck }}" />
            {% if masthead %}
            <meta name="twitter:image" content="https://eightshapes.com//images/articles/{{ title_image_path }}/masthead.png" />
            {% endif %}
            <meta name="twitter:url" value="https://www.eightshapes.com{{ page.url }}" />

        {% else %}
            <title>{{ title_tag | default(global.title_tag) }}</title>
        {% endif %}

        <link href="https://fonts.googleapis.com/css2?family=Barlow+Semi+Condensed:wght@400;600;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/dependencies/esds.css"> <!-- copied from esds-library dependency -->
        <link rel="stylesheet" href="/styles/escom.css">
    </head>
    <body class="{{ body_classes }}">
        <div class="header">
            <div class="header-logo">
                {% include '../_icons/eightshapes-logo.svg' %}
            </div>
        </div>
        {{ content | safe }}
        <div class="footer">
            <div class="footer-inner">
                <div class="footer-left">
                    <div class="footer-logo">
                        {% include '../_icons/eightshapes-logo.svg' %}
                    </div>

                    <p>
                        12805 Misty Creek Ln, Fairfax VA 22033
                        <br/>
                        (703) 296-8831 &#8226; <a href="mailto:info@eightshapes.com">info@eightshapes.com</a>
                    </p>

                    <p>
                        &copy;2022 EightShapes LLC.
                        <br/>
                        All rights reserved.
                    </p>
                </div>
                <div class="footer-right">
                    <p>
                        Find us on
                        <br/>
                        <a href="https://twitter.com/eightshapes">Twitter</a><br/>
                        <a href="https://www.linkedin.com/company/eightshapes-llc">LinkedIn</a><br/>
                        <a href="https://medium.com/eightshapes-llc">Medium</a>
                    </p>
                </div>
            </div>
        </div>
        {% include "_google_analytics.html" %}
    </body>
</html>
