{% import './_includes/escom.njk' as escom with context %}
{% import '../node_modules/esds-library/components/esds.njk' as esds %}


{% macro section_contents (
    category = "Visual Style"
    ) %}

<div class="escom-section-contents">
    <h4 class="escom-section-contents__header">{{ category }}</h4>
    <ul class="escom-section-contents__list">
        {%- for post in collections.all -%}
            {%- if post.data.category == category-%}
                <li class="escom-section-contents__item">
                    <h5 class="escom-section-contents__item-title">
                        <a  class="escom-section-contents__item-title-link" href="{{ post.url }}">
                            {{ post.data.title_abbreviation }}
                        </a>
                    </h5>
                    <p class="escom-section-contents__item-deck">
                        {{ post.data.deck }}
                    </p>
                </li>
            {%- endif -%}
        {% endfor %}
    </ul>
</div>

{% endmacro %}


{{ esds.breadcrumb() }}

{% call esds.row(background="white", class="esds-row--tall-inset") %}
    <div class="escom-long-form-text">
        <h2>@components</h2>
        <p class="escom-long-form-text__lead">
            The complete collection of EightShapes writings on design systems, here for free. Follow <a href="https://twitter.com/components">@components</a> on Twitter for updates and new articles.
        </p>
    </div>
    <div class="escom-section-contents__container">
        {{ section_contents("Visual Style") }}
        {{ section_contents("UI Components") }}
        {{ section_contents("Documentation") }}
        {{ section_contents("Releases") }}
        {{ section_contents("Strategy") }}
        {{ section_contents("Process") }}
        {{ section_contents("Contributions") }}
        {{ section_contents("People") }}
        {{ section_contents("Systems of Systems") }}
        {{ section_contents("Workshop Activities") }}
    </div>

{% endcall %}

{{ escom.cta(
    heading="Need help with your system?",
    deck="EightShapes can energize your efforts to coach, workshop, assess or partner with you to design, code, document and manage a system.",
    button_text="Learn More",
    button_href="/design-systems/",
    class="escom-cta--components-publication"
) }}