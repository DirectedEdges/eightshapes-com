    "@11ty/eleventy": "^0.10.0",
    "chokidar-cli": "^2.1.0",
    "del": "^3.0.0",
    "esds-build": "^0.51.0",
    "fs": "0.0.1-security",
    "glob": "^7.1.6",
    "marked": "^0.8.1",
    "npm-run-all": "^4.1.5",
    "strip-indent": "^3.0.0"
