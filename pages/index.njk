{% set title_tag = "EightShapes" %}
{% set body_classes = "escom-page-type--marketing" %}
{% extends 'templates/base.njk' %}

{% block body %}
    {{ escom.title_row(
        class="escom-title-row--centered-deck",
        logo=true,
        background="brand",
        decks=[
            "EightShapes designs web-based products and systems that make for beautiful, usable, cohesive experiences."
        ],
        page_anchors=[
          {    
            href: "#our-work",
            label: "Our Work"
          },
          {
            href: "#services",
            label: "What We Do"
          },
          {
            href: "#who-we-are",
            label: "Who We Are"
          },
          {
            href: "#contributions",
            label: "Contributions"
          }
        ]
   
    ) }}

  <!-- Our Work -->
  {% call esds.row(background="light", class="esds-row--tall-inset") %}
    <div class="escom-long-form-text">
        <h2 id="our-work">Our Work</h2>
    </div>
  {% endcall %}

  <!-- What We Do -->
  {% call esds.row(background="white", class="esds-row--tall-inset") %}
    <div class="escom-long-form-text">
      <h2 id="services">What We Do</h2>
    </div>
    {{ esds.tiles(
        container="light",
        items = [
            {
                heading: "Discovery",
                description: "We align your team around a shared product vision through design principles, customer insights, prototyped concepts.",
                property: "Includes brainstorming, workshops, prototyping, planning, and research such as usability and first-click testing",
                href: "/product-discovery.html"
            },
            {
                heading: "Design",
                description: "We provide end-to-end UX design, structuring projects to be sensitive to constraints, collaborative, and delivered on time.",
                property: "Includes UX design, information architecture, visual design, front-end development, and research"
            },
            {
                heading: "Systems",
                description: "We guide you to start, build, spread and sustain design systems so your teams can make innovative, beautiful experiences together.",
                property: "Includes strategy, design, code, documentation, coaching, assessments, and workshops",
                href: "/design-systems.html"
            }
        ]
    ) }}
  {% endcall %}
  
  <!-- People -->
  {% call esds.row(background="dark", class="esds-row--tall-inset") %}
    <div class="escom-long-form-text">
      <h2 id="who-we-are">Who We Are</h2>
      <p class="escom-long-form-text__lead">
        Though tenacious in solving complex design problems, we believe successful projects depend on transparency, cooperation, and Post-Its.
      </p>
    </div>
    {{ escom.bio_thumbnails() }}
  {% endcall %}
  
  <!-- Page CTA -->
  {{ escom.cta(heading="Ready?", deck="Working on a UX design? Crafting a product strategy? Starting a design system?", button_text="Email Us", href="mailto:info@eightshapes.com") }}
{% endblock %}
