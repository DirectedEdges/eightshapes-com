            class = "escom-timeline--bold-items",
            items = [
                {
                    time: "9:00AM - 9:30AM",
                    heading: "Definition",
                    content_right: [
                        esds.list(
                            items = [
                                {
                                    title: "Working Definition",
                                    description: "How do you define discovery?"
                                },
                                {
                                    title: "How Discovery Helps",
                                    description: "Why do we do discovery anyway?"
                                },
                                {
                                    title: "What We Do in Discovery",
                                    pill: "Activity",
                                    description: "What are the main activities and outputs in discovery?"
                                },
                                {
                                    title: "Discovery and Design",
                                    description: "What’s the relationship between discovery and design?"
                                }
                            ]
                        )
                    ]
                },
                {
                    time: "9:30AM - 10:30AM",
                    heading: "Intentions",
                    content_right: [
                        esds.list(
                            items = [
                                {
                                    title: "Framing Problem vs. Setting Direction",
                                    description: "What are the two chief concerns of discovery?"
                                },
                                {
                                    title: "The Central Tension",
                                    description: "How do divergence and convergence factor into discovery?"
                                },
                                {
                                    title: "Creativity and Discovery",
                                    pill: "Activity",
                                    description: "How does what we know about creativity bear on discovery?"
                                },
                                {
                                    title: "The Discovery Activities Matrix",
                                    description: "What’s the right way to think of discovery activities?"
                                }
                            ]
                        )
                    ]
                },
                {
                    time: "9:30AM - 10:30AM",
                    heading: "Assertions",
                    content_right: [
                        esds.list(
                            items = [
                                {
                                    title: "Framing the Problem",
                                    pill: "Activity",
                                    description: "What are the essential assertions for framing the problem?"
                                },
                                {
                                    title: "Setting the Direction",
                                    description: "What are the essential assertions for setting the direction?"
                                },
                                {
                                    title: "Big Concepts",
                                    description: "What is the big idea behind your product? Should we care?"
                                },
                                {
                                    title: "Assigning Intention",
                                    description: "Do you know why you make the artifacts you make?"
                                }
                            ]
                        )
                    ]
                },
                {
                    time: "Noon – 1:00pm",
                    heading: "Lunch"
                },
                {
                    time: "1:00PM - 3:00PM",
